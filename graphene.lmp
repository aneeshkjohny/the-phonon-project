units		real
atom_style	full
boundary	p p p
#----------------------------------------------------
#INPUT FILE
#----------------------------------------------------

read_data	inputFiles/graphene.lmpsys

#----------------------------------------------------
#POTENTIAL
#----------------------------------------------------

pair_style 	tersoff	
pair_coeff 	* * inputFiles/SiC.tersoff C 

#----------------------------------------------------
#INITIALIZATION
#----------------------------------------------------

velocity       all create 300 1234567 mom yes rot yes 

#----------------------------------------------------
#FORCE
#----------------------------------------------------

variable	Fx equal fcm(all,x)
variable	Fy equal fcm(all,y)

#----------------------------------------------------
#LOG
#----------------------------------------------------

thermo_style    custom step temp pe ke etotal v_Fx v_Fy
thermo          1000  
log             outputFiles/thermo.log

#----------------------------------------------------
#TIMESTEP
#----------------------------------------------------

timestep	1

#----------------------------------------------------
#NPT RUN
#----------------------------------------------------

fix		fxnpt all npt temp 300 300 100 iso 1.0 1.0 1000.0 

run		1000000

unfix		fxnpt

#----------------------------------------------------
#NVT RUN
#----------------------------------------------------

fix 		fxnvt all nvt temp 300.0 300.0 100.0
fix 		fxmom all momentum 1 linear 1 1 1 angular

#----------------------------------------------------
#EQUILIBRATION RUN
#----------------------------------------------------

run 		1000000

#----------------------------------------------------
#TEST RUN 
#----------------------------------------------------

unfix		fxnvt
fix		fxnve all nve 

#run 		500000

#unfix		fxnve
#fix		fxnvt all nvt temp 300.0  300.0 100.0

#----------------------------------------------------
#DUMP FILES
#----------------------------------------------------

dump            dmpvel1000 all custom 1000 outputFiles/vel1000.dat id vx vy vz
dump            dmpvel10000 all custom 10000 outputFiles/vel10000.dat id vx vy vz
dump            dmpall all dcd 10000 outputFiles/graphene.dcd   

#----------------------------------------------------
#PRODUCTION RUN
#----------------------------------------------------

run 		10000000







